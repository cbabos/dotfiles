# Make sure we're using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# brew install GNU core utilities (those that come with OS X are outdated)
# Don't forget to add `$(brew --prefix coreutils)/libexec/gnubin` to `$PATH`.
brew install coreutils
# brew install some other useful utilities like `sponge`
brew install moreutils
# brew install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils
# brew install zsh
brew install zsh

# brew install more recent versions of some OS X tools
brew install vim --override-system-vi
brew install homebrew/dupes/grep

# brew install brew cask
brew install cask

# brew install other useful binaries
brew install ack
brew install pv
brew install git
brew install imagemagick --with-webp
brew install lynx
brew install node
brew install nmap
brew install pigz
brew install rename
brew install rhino
brew install tree
brew install webkit2png
brew install zopfli
brew install p7zip

brew install homebrew/versions/lua52

# Remove outdated versions from the cellar
brew cleanup
